<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <package name="rights" namespace="/rights" extends="library">
		<!-- 用户 -->
		<action name="addUser" class="com.huan.library.web.action.UserAction" method="add">
			<result name="success">index.jsp</result>
		</action>
		<action name="userList" class="com.huan.library.web.action.UserAction" method="findUsers">
			<result name="success" type="json">
				<param name="root">extGridLoad</param>
			</result>
		</action>
		<!-- 模板功能 -->
		<action name="findModuleFunctions" class="com.huan.library.web.action.FunctionAction" method="findModuleFunctions">
			<result name="success">/module/left.jsp</result>
			<result name="error">/login.jsp</result>
		</action>
		
		<action name="getDeptChildrenItem" class="com.huan.library.web.action.DepartmentAction" method="getDeptChildrenItem">
			<result name="success" type="json">
				<param name="root">deptChildrenNodes</param>
			</result>
		</action>
		
		<action name="getDeptById" class="com.huan.library.web.action.DepartmentAction" method="getDeptById">
			<result name="success" type="json">
				<param name="root">department</param>
			</result>
		</action>
		
    </package>
    
    <package name="dict" namespace="/dict" extends="library">
    
    	<action name="getChildrenItem" class="com.huan.library.web.action.DictItemAction" method="getChildrenItem">
			<result name="success" type="json">
				<param name="root">dictChildrenNodes</param>
			</result>
		</action>
		
		<action name="getCategoryItem" class="com.huan.library.web.action.DictItemAction" method="getCategoryItem">
			<result name="success" type="json">
				<param name="root">dictChildrenNodes</param>
			</result>
		</action>
    
    </package>
    
    <package name="role" namespace="/role" extends="library">
    
		<action name="findRoles" class="com.huan.library.web.action.RoleAction" method="findRoles">
			<result name="success" type="json">
				<param name="root">extGridLoad</param>
			</result>
		</action>
    
    <action name="save" class="com.huan.library.web.action.RoleAction" method="save">
			<result name="success" type="json">
				<param name="root">extJsonForm</param>
			</result>
		</action>
    </package>
    
</struts>
