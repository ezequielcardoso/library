<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <package name="reader" namespace="/reader" extends="library">
		
		<!-- 读者类型 -->
		<action name="readerTypeMain" class="com.huan.library.web.action.ReaderTypeAction" method="readerTypeMain">
		    <result name="success">/module/reader/readerCategory.jsp</result>
		</action>
		
		<action name="findReaderTypes" class="com.huan.library.web.action.ReaderTypeAction" method="findReaderTypes">
		   <result name="success" type="json">
		     <param name="root">extGridLoad</param>
		   </result>
		</action>
	 
	    <action name="saveReaderType" class="com.huan.library.web.action.ReaderTypeAction" method="saveReaderType">
	       <result name="success" type="json">
	         <param name="root">extJsonForm</param>
	       </result>
	    </action>
	    
	    <action name="deleteReaderType" class="com.huan.library.web.action.ReaderTypeAction" method="deleteReaderType">
	      <result name="success" type="json">
	         <param name="root">extJsonForm</param>
	      </result>
	    </action>	
		
        <!-- 借阅证 -->
        <action name="readerCardMain" class="com.huan.library.web.action.ReaderCardAction" method="readerCardMain">
           <result name="success">/module/reader/card/cardList.jsp</result>
        </action>
        
        <action name="findReaderCards" class="com.huan.library.web.action.ReaderCardAction" method="findReaderCards">
           <result name="success" type="json">
             <param name="root">extGridLoad</param>
           </result>
        </action>
        
        <action name="showSaveReaderCard" class="com.huan.library.web.action.ReaderCardAction" method="showSaveReaderCard">
           <result name="success">/module/reader/card/saveCard.jsp</result>
        </action>
          
    </package>
    
</struts>
