<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- 书刊模块 -->
    <package name="books" namespace="/books" extends="library">
		<action name="findBooksByPages" class="com.huan.library.web.action.BookAction" method="findBooksByPages">
			<result name="success">/module/book/bookList.jsp</result>
		</action>
		
		<action name="findBooks" class="com.huan.library.web.action.BookAction" method="findBooks">
			         <!-- 返回类型为json 在json-delfault中定义 -->
			<result name="success" type="json">
			          <!-- root的值对应要返回值的属性 --> 
			          <!-- 这里的extGridLoad 对应action中的result--> 
				<param name="root">extGridLoad</param>
			</result>
		</action>
		
		<action name="showModifyBook" class="com.huan.library.web.action.BookAction" method="showModifyBook">
			<result name="showModifyBook" >/module/book/modifyBook.jsp</result>
		</action>
		
		<action name="showSaveBook" class="com.huan.library.web.action.BookAction" method="showSaveBook">
			<result name="showSaveBook" >/module/book/addBook.jsp</result>
		</action>
		
		<action name="saveBook" class="com.huan.library.web.action.BookAction" method="saveBook">
			<result name="success" type="json">
				<param name="root">extJsonForm</param>
			</result>
		</action>
		
		<action name="deleteBook" class="com.huan.library.web.action.BookAction" method="deleteBook">
			<result type="chain" >findBooks</result>
		</action>
		
		<action name="*Magazine" class="com.huan.library.web.action.MagazineAction" method="{1}">
			<result name="showSaveBook">/module/book/addBook.jsp</result>
			<result name="showModifyBook">/module/book/modifyBook.jsp</result>
			<result name="success">/module/book/bookList.jsp</result>
		</action>
		
		
    </package>
</struts>
