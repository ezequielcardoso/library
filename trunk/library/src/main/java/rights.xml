<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <package name="rights" namespace="/rights" extends="library">
		<!-- 用户 -->
		<action name="addUser" class="com.huan.library.web.action.UserAction" method="add">
			<result name="success">index.jsp</result>
		</action>
		<action name="userList" class="com.huan.library.web.action.UserAction" method="findAllUsersInJson">
			<result name="success" type="json">
				<param name="root">results</param>
			</result>
		</action>
		<!-- 模板功能 -->
		<action name="findModuleFunctions" class="com.huan.library.web.action.FunctionAction" method="findModuleFunctions">
			<result name="success">/module/left.jsp</result>
			<result name="error">/login.jsp</result>
		</action>
		
    </package>
    
    <package name="dict" namespace="/dict" extends="library">
    
    	<action name="getChildrenItem" class="com.huan.library.web.action.DictItemAction" method="getChildrenItem">
			<result name="success" type="json">
				<param name="root">dictChildrenNodes</param>
			</result>
		</action>
    
    </package>
    
</struts>
